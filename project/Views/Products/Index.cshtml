@model IEnumerable<project.Models.Product>

@{
    ViewBag.Title = "Index";
}

<div style="margin: 10px auto; width: 90%;">
    <h2 style="text-align: center">THÔNG TIN PRODUCTS</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new { @class = "btn btn - primary" })
    </p>
    <table class="table">
        <tr>
            <th class="col-2">
                TÊN SẢN PHẨM
            </th>
            <th class="col-4">
                MÔ TẢ
            </th>
            <th class="col-1">
                GIÁ
            </th>
            <th class="col-1">
                HÌNH
            </th>
            <th class="col-1">
                CATEGORY
            </th>
            <th class="col-3"></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamePro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecriptionPro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="~/Content/img/@Url.Content(item.ImagePro)" height="150" width="150" alt="Images" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>
                   item.Category.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new
                    {
                        id =
                   item.ProductID
                    }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new
                    {
                        id =
                   item.ProductID
                    }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new
                    {
                        id =
                   item.ProductID
                    }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>